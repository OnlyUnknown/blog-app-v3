<h1>New Posts</h1>

<%= form_with model: @post, url:'/posts' do |f| %>
        <%=f.label :title%><br>
        <%= f.text_field :title %><br>
        <%=f.label :text%><br>
        <%= f.text_area :text %><br>
        <%= f.hidden_field :comments_counter, value:0 %>
        <%= f.hidden_field :likes_counter, value:0 %>
       <%= f.hidden_field :author_id, value: @post.author_id%>
        <%= f.submit %>
      
      <% end %>
    
