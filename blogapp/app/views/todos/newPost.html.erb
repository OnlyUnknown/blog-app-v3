<%@user=User.current_user%>

<%= form_with model: @todo, local: true do |f| %>

    <%= f.text_field :title %>
    <%= f.text_area :text %>
    <%= f.hidden_field :likes_counter, value = 0 %>
    <%= f.hidden_field :comments_counter, value = 0 %>
    <%= f.hidden_field :author_id, value = @user %>
    <%= f.submit %>
  
  <% end %>